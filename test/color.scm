(use-modules (guest test)
             (guest color))

(define-test (guest color ansi-format)
  (equal? (ansi-format 0) "\x1b[0m")
  (equal? (ansi-format 20) "\x1b[20m")
  (equal? (ansi-format 0 2) "\x1b[0;2m")
  (equal? (ansi-format 0 2 1000) "\x1b[0;2;1000m"))

(define-test (guest color foreground)
  (equal? (foreground #:black "h") "\x1b[30mh\x1b[39m")
  (equal? (foreground #:red "h") "\x1b[31mh\x1b[39m")
  (equal? (foreground #:green "h") "\x1b[32mh\x1b[39m")
  (equal? (foreground #:yellow "h") "\x1b[33mh\x1b[39m")
  (equal? (foreground #:blue "h") "\x1b[34mh\x1b[39m")
  (equal? (foreground #:magenta "h") "\x1b[35mh\x1b[39m")
  (equal? (foreground #:cyan "h") "\x1b[36mh\x1b[39m")
  (equal? (foreground #:white "h") "\x1b[37mh\x1b[39m"))

(define-test (guest color background)
  (equal? (background #:black "h") "\x1b[40mh\x1b[49m")
  (equal? (background #:red "h") "\x1b[41mh\x1b[49m")
  (equal? (background #:green "h") "\x1b[42mh\x1b[49m")
  (equal? (background #:yellow "h") "\x1b[43mh\x1b[49m")
  (equal? (background #:blue "h") "\x1b[44mh\x1b[49m")
  (equal? (background #:magenta "h") "\x1b[45mh\x1b[49m")
  (equal? (background #:cyan "h") "\x1b[46mh\x1b[49m")
  (equal? (background #:white "h") "\x1b[47mh\x1b[49m"))

(define-test (guest color underlined)
  (equal? (underlined "h") "\x1b[4mh\x1b[24m"))

(define-test (guest color blinking)
  (equal? (blinking "h") "\x1b[5mh\x1b[25m"))

